<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Prime Purchase (Administrator)</h1>
        <p class="lead">Please Update or Add Products Below</p>
        <form>
            <div class="form-group col-md-4">
                <label for="productName">Product Name</label>
                <input type="text" class="form-control" id="productName" placeholder="Enter Products Name">
            </div>
            <div class="form-group col-md-4">
                <label for="productPrice">Product Price</label>
                <input type="number" class="form-control" id="productPrice" placeholder="Enter Cost Per Item">
            </div>
            <div class="form-group col-md-4">
                <label for="totalItemStock">Total Stock</label>
                <input type="number" class="form-control" id="productStock" placeholder="Enter Total Amount">
            </div>
            <div class="form-group col-md-4">
                <label for="totalItemStock">Product Image</label>
                <input type="image" class="form-control" id="productImage" placeholder="Upload Image">
            </div>
            <div class="form-group col-md-6">
                <label for="itemDescription">Description</label>
                <textarea class="form-control" id="itemDescription" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Item</button>
            <button type="submit" class="btn btn-primary">Update Item(s)</button>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Department</th>
            <th scope="col">Product Price</th>
            <th scope="col">Amount in Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>

            <td>{{this.id}}</td>
            <td>{{this.product_name}}</td>
            <td>{{this.department}}</td>
            <td>{{this.product_price}}</td>
            <td>{{this.stock}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>