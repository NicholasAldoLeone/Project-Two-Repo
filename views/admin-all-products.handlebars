<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Prime Purchase (Administrator)</h1>
        <p class="lead">Please Update or Add Products Below</p>
        <form>
            <div class="form-group col-md-4">
                <label for="product_name">Product Name</label>
                <input type="text" class="form-control" id="product_name" placeholder="Enter Products Name">
            </div>
            <div class="form-group col-md-4">
                <label for="product_cost">Product Price</label>
                <input type="number" class="form-control" id="product_cost" placeholder="Enter Cost Per product">
            </div>
            <div class="form-group col-md-4">
                <label for="total_stock">Total Stock</label>
                <input type="number" class="form-control" id="total_stock" placeholder="Enter Total Amount">
            </div>
            <form method="post" action="" enctype="multipart/form-data" id="myform">
                <div class="preview">
                    <img src="" id="img" width="100" height="100" />
                </div>
                <div>
                    <input type="file" id="file" name="file" />
                </div>
            </form>
            <div class="form-group col-md-6">
                <label for="product_description">Description</label>
                <textarea class="form-control" id="product_description" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" id="add-product">Add product</button>
            <button type="submit" class="btn btn-primary" id="update-product">Update product(s)</button>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Department</th>
            <th scope="col">Product Price</th>
            <th scope="col">Amount in Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{id}}</td>
            <td>{{product_name}}</td>
            <td>{{product_department}}</td>
            <td>${{product_cost}}</td>
            <td>{{total_stock}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

