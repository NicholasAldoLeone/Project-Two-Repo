<div class="jumbotron jumbotron-fluid jumbotron-attr">
    <div class="container">
       <img class="prime-logo" src="/images/logo/new-prime-logo.png" alt="Prim Products logo">
        <p class="lead">Please find all of our Preeminent Products Below!</p>
    </div>
</div>
<br>
<br>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Department</th>
            <th scope="col">Product Price</th>
            <th scope="col">Amount in Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{id}}</td>
            <td>{{product_name}}</td>
            <td>{{product_department}}</td>
            <td>{{product_cost}}</td>
            <td>{{total_stock}}</td>
            <td>
                <a type="button" class="btn btn-primary" href = "/api/products/{{id}}" id = "view-btn">View</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>